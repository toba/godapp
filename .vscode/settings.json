{
    "editor.autoIndent": true,
    "editor.dragAndDrop": true,
    "editor.tabSize": 3,
    "editor.parameterHints": true,

    "files.eol": "\n",
    "files.associations": {
       "*.abi": "json"
    },

    "gitlens.codeLens.enabled": false,
    "gitlens.blame.line.enabled": false,
    "gitlens.statusBar.enabled": false,

    "go.buildOnSave": "package",
    "go.vetOnSave": "package",
    "go.vetFlags": [
        "composites=false"
    ],
    "go.enableCodeLens": {
       "references": false,
       "runtest": true
    },
    "go.buildTags": "",
    // https://golang.org/src/cmd/go/build.go
    "go.buildFlags": [],
    // gogetdoc bogs down
    // https://zmb3.github.io/post/gogetdoc/
    "go.docsTool": "godoc",
    "go.testFlags": [],
    "go.lintTool": "megacheck",
    //"go.lintTool": "gometalinter",
    // See https://github.com/alecthomas/gometalinter
    // "go.lintFlags": [
    //    "disable-all",
    //    "enable=errcheck",
    //    "enable=goconst",
    //    "enable=gotype",
    //    "enable=staticcheck",
    //    "enable=structcheck",
    //    "enable=unconvert",
    //    "enable=varcheck",
    //    "enable=vet"
    // ],
    "go.lintOnSave": "package",
    "go.coverageDecorator": "gutter",
    "go.coverOnSave": false,
    "go.useCodeSnippetsOnFunctionSuggest": false,
    "go.formatTool": "goimports",
    "go.formatFlags": [],
    "go.formatOnSave": true,
    // enabling this breaks the linters
    "go.gocodeAutoBuild": false,

    "solidity.enabledAsYouTypeCompilationErrorCheck": true,
    "solidity.validationDelay": 1500,
    "solidity.soliumRules": {
       "array-declarations": true,
       "blank-lines": false,
       "camelcase": false,
       "deprecated-suicide": true,
       "double-quotes": true,
       "imports-on-top": true,
       "indentation": false,
       "lbrace": true,
       "mixedcase": true,
       "no-empty-blocks": true,
       "no-unused-vars": true,
       "no-with": true,
       "operator-whitespace": true,
       "pragma-on-top": true,
       "uppercase": true,
       "variable-declarations": true,
       "whitespace": true
    }
  }